<p id="notice"><%= notice %></p>

<h1>Study Guides</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_guides.each do |study_guide| %>
      <tr>
        <td><%= study_guide.title %></td>
        <td><%= link_to 'Show', study_guide %></td>
        <td><%= link_to 'Edit', edit_study_guide_path(study_guide) %></td>
        <td><%= link_to 'Destroy', study_guide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

